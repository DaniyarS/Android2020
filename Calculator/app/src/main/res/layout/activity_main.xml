<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#2C3033"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="40sp">

    </TextView>

    <LinearLayout
        android:id="@+id/subFunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:orientation="horizontal"
        android:background="#174FA6"
        >

        <Button
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#174FA6"
            android:text="√"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#174FA6"
            android:text="%"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#174FA6"
            android:text="m^n"
            android:textColor="#FFFFFF">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subFunction"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/subFunction"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven"
                    style="@style/calc_button"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/eight"
                    style="@style/calc_button"
                    android:text="8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/nine"
                    style="@style/calc_button"
                    android:text="9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    style="@style/calc_button"
                    android:text="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/five"
                    style="@style/calc_button"
                    android:text="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/six"
                    style="@style/calc_button"
                    android:text="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    style="@style/calc_button"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/two"
                    style="@style/calc_button"
                    android:text="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/three"
                    style="@style/calc_button"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zero"
                    style="@style/calc_button"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/dot"
                    style="@style/calc_button"
                    android:text=","
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>

                <Button
                    android:id="@+id/equal"
                    style="@style/calc_button"
                    android:text="="
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"></Button>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/del"
                style="@style/operation_button"
                android:text="C"></Button>

            <Button
                android:id="@+id/delAll"
                style="@style/operation_button"
                android:text="AC"></Button>

            <Button
                android:id="@+id/division"
                style="@style/operation_button"
                android:text="÷"></Button>

            <Button
                android:id="@+id/multiplication"
                style="@style/operation_button"
                android:text="×"></Button>

            <Button
                android:id="@+id/minus"
                style="@style/operation_button"
                android:text="-"></Button>

            <Button
                android:id="@+id/plus"
                style="@style/operation_button"
                android:text="+"></Button>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>